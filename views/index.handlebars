
<h1>O-Pine - eSports News & Comments</h1>



<h2 class="col-12 myq-heading" id="">Latest News</h2>
    <div class="container">
        <div class="row justify-content-around">
            {{#each data}}
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                <div class="card-body">
                    <a href={{this.url}} target="_blank">{{this.title}}</a>
                    <p class="card-text">Source: {{this.source}} | {{this.date}}</p>
                    <button class="btn col-12" id="{{_id}}">View Comments</button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
